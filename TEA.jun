module TEA

open(NeoPixel)

let mut state : Model<1, 150> = initialState(
    array(
        { pin := 7 }
    ), 
    150
)

let mut previousAction : maybe<Action> = nothing()

fun setup() = ()
fun loop() = {
    Signal:foldP(
        (action, state) => {
            update(state)
        },
        inout state,
        actions(inout previousAction)
    )
}